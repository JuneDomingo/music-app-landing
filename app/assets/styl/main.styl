@import 'animate';

@font-face
    font-family 'Montserrat-Bold'
    src url('../fonts/Montserrat-Bold.ttf') format('truetype')

@font-face
    font-family 'Montserrat-Light'
    src url('../fonts/Montserrat-Light.ttf') format('truetype')

@font-face
    font-family 'Montserrat-Thin'
    src url('../fonts/Montserrat-Thin.ttf') format('truetype')
    
@font-face
    font-family 'Montserrat-Regular'
    src url('../fonts/Montserrat-Regular.ttf') format('truetype')
    
@font-face
    font-family 'Peace-Sans'
    src url('../fonts/Peace-Sans-Webfont.ttf') format('truetype')

.pl-55
    padding-left 55px
    
.pr-55
    padding-right 55px

.btn
    min-height 44px
    padding 11px 30px
    border none
    font-family 'Montserrat-Light'
    text-transform uppercase
    font-size 12px

.btn.btn-primary
    background #D92A6E
    transition all 0.3s ease
    
    &:hover,
    &:visited
    &:focus,
    &:active
        background #BE2560
        color #fff
    
.header
    display flex
    flex-direction column
    background url(../img/bg-chix.png) no-repeat center top
    padding-top 10px
    text-align center
    background-attachment relative
    background-position center center
    min-height 680px
    width 100%
    background-size 100%
    background-size cover

.navbar
    height 90px
    
.navbar-default
    border none
    background-color transparent
    font-family 'Montserrat-Thin'
    text-transform uppercase
    font-size 13px

    .navbar-nav li a
        color #fff
        border-bottom 2px solid transparent
        transition all 0.3s ease
        
        &:hover
            color #fff
            border-bottom 2px solid #D92A6E

    .navbar-nav >.active > a
        border-bottom 2px solid #D92A6E
        background none
        color #fff
        font-weight bold
        
        &:hover
            color #fff
            background none
        
    // hamburger
    .navbar-toggle
        margin-top 27px 
        border-radius 0px
        
        &:hover
            background-color #D92A6E
            color #fff

        .icon-bar
            background-color #fff
        
    .navbar-collapse
        margin-top 19px
        border-color rgba(255, 255, 255, 0.50)
        
        
    
.hero-details
    display flex
    flex-direction column
    justify-content center
    min-height 480px
        
    h1 
        font-family 'Peace-Sans'
        font-size 116px
        color rgba(255, 255, 255, 0.23)
        text-transform uppercase
        
    .hero-tagline
        color rgba(255, 255, 255, 0.50)
        font-size 17px
        margin-top -20px
        font-family 'Montserrat-Thin'
    
    .hero-cta
        margin-top 25px
        

.section-title
    color #D92A6E
    font-size 20px
    text-transform uppercase
    font-family 'Montserrat-Bold'
    
.section-details
    margin-top 105px
    @media(max-width 992px)
        margin-top 45px
    
    button
        margin-top 30px
    
.section-desc
    margin-top 30px
    color #6F6F6F
    font-size 16px
    font-family 'Montserrat-Light'
    line-height 31px
    

section.player
    min-height 530px
    background-color #F4F4F4
    
    @media(max-width 992px)
        min-height 100px
    
section.design
    min-height 530px
    
section.download
    background url(../img/bg-download.png) no-repeat center top
    background-attachment relative
    background-position center center
    min-height 390px
    width 100%
    background-size 100%
    background-size cover
    margin-top 45px
    
    .section-desc
        color #a7a7a7 
    
section.footer
    display flex
    min-height 200px
    justify-content center
    align-items center
    
    .logo
        height 58px
        width 58px
    